# Statistical Browser Fingerprint Generator Environment Configuration

# Application Settings
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://fingerprint_user:secure_password@localhost:5432/fingerprint_db
POSTGRES_USER=fingerprint_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=fingerprint_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-this
API_SECRET_KEY=your-super-secret-api-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/fingerprint-generator.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Settings
MAX_CONCURRENT_GENERATIONS=100
CACHE_TTL_SECONDS=3600
CACHE_SIZE_LIMIT=10000

# Browser Statistics Collection
ENABLE_DATA_COLLECTION=true
DATA_COLLECTION_INTERVAL_HOURS=24
STATISTICS_API_ENDPOINT=https://api.browser-stats.com

# curl-impersonate Integration
CURL_IMPERSONATE_PATH=/usr/local/bin/curl
DEFAULT_CURL_TIMEOUT=30000

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Settings (uncomment for development)
# NODE_ENV=development
# DEBUG=fingerprint:*
# ENABLE_MOCK_DATA=true
# MOCK_DATA_PATH=./tests/fixtures/mock-data.json

# Testing Settings
TEST_SEED=12345
TEST_BROWSER=chrome
TEST_DEVICE=desktop
TEST_PLATFORM=windows

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CHAIN_PATH=/etc/nginx/ssl/chain.pem

# External API Integration
EXTERNAL_API_TIMEOUT=10000
EXTERNAL_API_RETRIES=3
EXTERNAL_API_BACKOFF_MS=1000

# Feature Flags
ENABLE_BROWSER_AUTOMATION=true
ENABLE_CANVAS_FINGERPRINTING=true
ENABLE_TLS_FINGERPRINTING=true
ENABLE_STEALTH_MODE=true

# Compliance and Privacy
DATA_RETENTION_DAYS=30
ENABLE_ANONYMIZATION=true
REQUIRE_AUTHENTICATION=false
LOG_REQUESTS=true